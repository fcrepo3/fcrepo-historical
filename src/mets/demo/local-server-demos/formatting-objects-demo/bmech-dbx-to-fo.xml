	<!---*******************************************************************************************************************************************-->
	<!--  FEDORA SYSTEM METADATA: -->
	<!---*******************************************************************************************************************************************-->
	<METS:metsHdr ID="H1" CREATEDATE="2002-02-17T06:32:00" LASTMODDATE="2002-02-17T06:32:00" RECORDSTATUS="A">
		<METS:agent ID="A1" ROLE="CREATOR" TYPE="INDIVIDUAL">
