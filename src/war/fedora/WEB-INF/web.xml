  <!-- servlet specs 2.3 and 2.4 allow filter-mappings with either a single url-pattern or a single servlet-name (but not both).  
  the multiple filter-mappings below for a single servlet filter are to avoid requiring servlet spec 2.5, 
  which does support multiple instances of either type (url-pattern and servlet-name can be mingled in the same filter-mapping).
  when we require servlet containers to support 2.5, we could edit into a single filter-mapping.
    
  http://jcp.org/aboutJava/communityprocess/mrel/jsr154/index.html
  http://www.javaworld.com/javaworld/jw-01-2006/jw-0102-servlet.html?page=4
  
   -->

  <!-- authn always required -->
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <servlet-name>AxisServlet</servlet-name>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <servlet-name>BESecurityServlet</servlet-name>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <servlet-name>ControlServlet</servlet-name>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name> 
    <url-pattern>/getDSAuthenticated</url-pattern>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <servlet-name>GetNextPIDServlet</servlet-name>  
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <servlet-name>UploadServlet</servlet-name>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <url-pattern>/index.html</url-pattern>
  </filter-mapping>  
  <filter-mapping> 
    <filter-name>EnforceAuthnFilter</filter-name>  
    <url-pattern>/services/management</url-pattern>
  </filter-mapping>  
  <!-- authn always required ^^^^^ -->

  <!-- among security filters, map this one last. -->
  <filter-mapping> 
    <filter-name>FinalizeFilter</filter-name>  
    <url-pattern>/*</url-pattern> 
  </filter-mapping>  


