  <properties>
    <demo.src.dir>${basedir}/src/main/resources/demo</demo.src.dir>
    <fedora.home.build.dir>${basedir}/build/home</fedora.home.build.dir>
  </properties>

  <build>

    <!-- This 'resource' directory should be migrated to default location -->
    <resources>
      <resource>
        <directory>${basedir}/../resources/server</directory>
        <filtering>true</filtering>
      </resource>
       <resource>
        <directory>src/main/resources/dbspec/server</directory>
        <filtering>true</filtering>
      </resource>
    </resources>


    <plugins>

      <!-- ** This plugin needs to be removed when ANT is gone ** -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.2</version>
        <configuration> 
          <includes>
            <include>**/Test*</include>
            <include>**/*Test.class</include>
          </includes>
          <excludes>
            <exclude>**/DOValidatorXMLSchemaTest*</exclude> <!-- needs adjustment for server/... basedir -->
            <exclude>**/TestAtomDODeserializer*</exclude> <!-- needs adjustment for server/... basedir -->
            <exclude>**/TestAtomDOSerializer*</exclude> <!-- needs adjustment for server/... basedir -->
            <exclude>**/TestFedoraUsers*</exclude> <!-- needs adjustment for server/... basedir -->
            <exclude>**/TestFedoraWebXML*</exclude> <!-- needs adjustment for server/... basedir -->
            <exclude>**/TestServer.class</exclude> <!-- this is not a test class -->
            <exclude>${integrationTests}</exclude>
            <exclude>${nestedClassTests}</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <id>int-test</id>
            <phase>integration-test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <skip>${integration.test.skip}</skip>
              <systemProperties>
              </systemProperties>
              <excludes>
                <exclude>${instrumentedTests}</exclude>
                <exclude>${nestedClassTests}</exclude>
                <exclude>**/All*</exclude>
                <!-- see comment in file for fixing when ANT is gone. -->
                <exclude>**/ResourceIndexModMiscIntegrationTest*</exclude>
                <exclude>**/ResourceIndexDatePrecisionIntegrationTest*</exclude>
                <exclude>**/ResourceIndexModDSIntegrationTest*</exclude>
                <exclude>**/ResourceIndexAddDelDSIntegrationTest*</exclude>
                <exclude>**/ResourceIndexAddDelMiscIntegrationTest*</exclude>
              </excludes>
              <includes>
                <include>${integrationTests}</include>
              </includes>
            </configuration>
          </execution>
        </executions>  
      </plugin>

