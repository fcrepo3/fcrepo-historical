<serviceGroup>
	<service name="MelcoePDP" scope="application" targetNamespace="http://pdp.xacml.melcoe/xsd">
		<schema schemaNamespace="http://pdp.xacml.melcoe/xsd" />
		<description>Melcoe PDP Service</description>
		<parameter name="ServiceClass">melcoe.xacml.pdp.MelcoePDPImpl</parameter>
		<messageReceivers>
			<messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-only" class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" />
			<messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-out" class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
		</messageReceivers>
	</service>
	<service name="PolicyDataManagerService" scope="application" targetNamespace="http://data.pdp.xacml.melcoe/xsd">
		<schema schemaNamespace="http://data.pdp.xacml.melcoe/xsd" />
		<description>Service for managing policies</description>
		<parameter name="ServiceClass">melcoe.xacml.pdp.data.PolicyDataManagerService</parameter>
		<messageReceivers>
			<messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-only" class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" />
			<messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-out" class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
		</messageReceivers>
		<excludeOperations>
			<operation>getPolicyDataManager</operation>
			<operation>setPolicyDataManager</operation>
		</excludeOperations>
	</service>
</serviceGroup>
